<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.cktext_area :content %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select(:status, [['published', 0], ['unpublished', 1]]) %>
  </div>
  <div class="actions">
    <% if params[:id] != nil %>
      <%= submit_tag 'Update' %>
      <%= submit_tag 'Delete', :onclick=>'update_edit_article_action();' %>
    <% else %>
      <%= submit_tag 'Create' %>
    <% end %>
  </div>
<% end %>

<% if @videos.empty? %>
  <%= t('videos.no_videos') %>
<% else %>

  <%= form_tag admin_videos_path,  :method => :post do %>

    <% @videos.each do |video| %>
      <div class="item fetched-video">
        <span class="add-item">
          <%= check_box_tag "fetched_videos[]", { :title => video['title'], :description => video['description'], :content => video['url'], :published_at => "#{video['published_at']}" } %>
        </span>

        <h3>
          <%= video['title'] %>
        </h3>
        <div class="iteminfo">
          <span class="date"><%= l(video['published_at'], :format => :long) %></span>

          <div class='cl_all'></div>
          <div class='video'>
            <%= link_to ' + ', '#', :class => 'spoiler left' %>
            <iframe class='video-frame' src="<%= video['url'] %>"></iframe>
          </div>
       </div>

      </div>
    <% end %>

    <%= submit_tag t('videos.save_video'), :class => "right", :id => "add-videos-btn" %>
  <% end %>

  <div class="pages">
    <%= will_paginate @videos %>
  </div>

<% end %>

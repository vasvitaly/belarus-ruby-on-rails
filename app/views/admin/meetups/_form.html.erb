<%= javascript_include_tag "tryout.js" %>

<%= simple_nested_form_for [:admin, @meetup] do |f| %>
  <table class="loginTBL">
    <tr>
      <td><%= f.label :topic, t('meetup.topic') %></td>
      <td>
        <div class="field"><%= f.text_field :topic %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :description, t('meetup.description') %></td>
      <td>
        <div class="field"><%= f.text_area :description %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :place, t('meetup.place') %></td>
      <td>
        <div class="field"><%= f.text_field :place %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :letter_subject, t('meetup.letter_subject') %></td>
      <td>
        <div class="field"><%= f.text_field :letter_subject %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :letter_body, t('meetup.letter_body') %></td>
      <td>
        <div class="field"><%= f.cktext_area :letter_body %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :decline_email_subject, t('meetup.decline_email_subject') %></td>
      <td>
        <div class="field"><%= f.text_field :decline_email_subject %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :decline_email_body, t('meetup.decline_email_body') %></td>
      <td>
        <div class="field"><%= f.cktext_area :decline_email_body %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :accept_email_subject, t('meetup.accept_email_subject') %></td>
      <td>
        <div class="field"><%= f.text_field :accept_email_subject %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :accept_email_body, t('meetup.accept_email_body') %></td>
      <td>
        <div class="field"><%= f.cktext_area :accept_email_body %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :url, t('meetup.url') %></td>
      <td>
        <div class="field"><%= f.text_field :url %></div>
      </td>
    </tr>
    <tr>
      <td><%= f.label "date_and_time", t('meetup.date_and_time') %></td>
      <td>
        <div class="field">
          <%= f.text_field :date_and_time,  :value => ( @meetup.date_and_time.present? ? @meetup.date_and_time.strftime('%Y-%m-%d %H:%M:%S') : ''), :class => 'meetup datepicker' %>
        </div>
      </td>
    </tr>
    <tr>
      <td><%= f.label "finish_date_and_time", t('meetup.finish_date_and_time') %></td>
      <td>
        <div class="field">
          <%= f.text_field :finish_date_and_time,  :value => ( @meetup.finish_date_and_time.present? ? @meetup.finish_date_and_time.strftime('%Y-%m-%d %H:%M:%S') : ''), :class => 'meetup datepicker' %>
        </div>
      </td>
    </tr>
    <tr>
      <td><%= f.label :premoderation, t('meetup.premoderation') %></td>
      <td>
        <div class="field"><%= f.check_box :premoderation %></div>
      </td>
    </tr>
    <tr>
      <td colspan='2'>
        <%= f.fields_for :questions %>
        <p><%= f.link_to_add 'Добавить вопрос', :questions %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.label :status, t('meetup.status') %></td>
      <td>
        <div class="field"><%= f.select :status, [[ t('meetup.status_open'), true], [ t('meetup.status_close'), false]] %></div>
      </td>
    </tr>
    <tr>
      <td></td>
      <td class="save">
        <%= content_tag :button, :type => :submit, :name => :commit do %>
          <span><span><%= t('meetup.save_button') %></span></span>
        <% end %>
        <%= link_to(
          content_tag(:span, content_tag(:span, t('meetup.back_link'))),
          admin_meetups_path,
          :class => :button
        ) %>
        <button type="button" class="tryout" data-url="<%= admin_tryout_meetup_message_path %>"><span><span><%= t('admin.messages.tryout_button') %></span></span></button>
      </td>
    </tr>
  </table>
<% end %>

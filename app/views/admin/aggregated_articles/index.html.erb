<h1><%= t('articles.listing_aggregated_articles') %></h1>

<% if @articles.empty? %>

   <%= t('articles.no_news') %>

<% else %>

  <table class='list-table'>
    <tr>
      <th><%= t('articles.title') %></th>
      <th></th>
    </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= link_to t('articles.delete'), admin_aggregated_article_path(article.id), confirm: t('common.are_you_sure'), method: :delete %></td>
    </tr>
  <% end %>

  </table>

<% end %>

<br />

<%= will_paginate @articles %>

<h1><%= t('twitter_blocks.list_title') %></h1>

<%= link_to button_inner_html(t('twitter_blocks.add_a_block')), new_admin_twitter_block_path, :class => 'button' %>

<% if @twitter_blocks.empty? %>

  <%= t('twitter_blocks.no_blocks') %>

<% else %>
  <table class='list-table'>
    <tr>
      <th><%= t('twitter_blocks.title') %></th>
      <th></th>
    </tr>
  <% @twitter_blocks.each do |block| %>
    <tr>
      <td><%= link_to "#{block.title} #{block.subject}", edit_admin_twitter_block_path(block) %> </td>
      <td><%= link_to t('common.delete'), admin_twitter_block_path(block), confirm: t('common.are_you_sure'), method: :delete %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<%= will_paginate @twitter_blocks %>
